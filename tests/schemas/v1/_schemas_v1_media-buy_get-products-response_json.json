{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/v1/media-buy/get-products-response.json",
  "title": "Get Products Response",
  "description": "Response payload for get_products task",
  "type": "object",
  "properties": {
    "adcp_version": {
      "type": "string",
      "description": "AdCP schema version used for this response",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.6.0"
    },
    "status": {
      "$ref": "/schemas/v1/enums/task-status.json",
      "description": "Current task state",
      "default": "completed"
    },
    "products": {
      "type": "array",
      "description": "Array of matching products",
      "items": {
        "$ref": "/schemas/v1/core/product.json"
      }
    },
    "errors": {
      "type": "array",
      "description": "Task-specific errors and warnings (e.g., product filtering issues)",
      "items": {
        "$ref": "/schemas/v1/core/error.json"
      }
    }
  },
  "required": [
    "adcp_version",
    "products"
  ],
  "additionalProperties": false
}
