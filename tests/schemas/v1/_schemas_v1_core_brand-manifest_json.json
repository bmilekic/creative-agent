          }
        ],
        "colors": {
          "primary": "#FF6B35",
          "secondary": "#004E89",
          "accent": "#F7931E",
          "background": "#FFFFFF",
          "text": "#1A1A1A"
        },
        "fonts": {
          "primary": "Helvetica Neue",
